<Window x:Class="SubRed.ExtractSubsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SubRed"
        mc:Ignorable="d"
        Title="ExtractSubsWindow" Height="521" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <Menu x:Name="menu">
                <MenuItem Header="Открыть изображение" Click="OpenImage_Click"></MenuItem>
                <MenuItem Header="Открыть видео" Click="OpenVideo_Click"></MenuItem>
            </Menu>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <DockPanel Width="100"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="31"/>
            </Grid.RowDefinitions>
            <Image Grid.Row="0" x:Name="image" Margin="0,0,0,33"/>
            <TextBlock Grid.Row="1" x:Name="textBlock" TextWrapping="Wrap" Text="TextBlock" HorizontalAlignment="Center" Width="Auto" Height="31" VerticalAlignment="Top"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="0">
            <Button x:Name="runButton" Content="Run" HorizontalAlignment="Left" Height="30" VerticalAlignment="Top" Click="RunButton_Click"/>
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <DataGrid x:Name="SubtitleTable">

            </DataGrid>
        </Grid>
    </Grid>
</Window>
